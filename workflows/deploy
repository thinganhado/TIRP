name: CI & CD to OCI

on:
  push:
    branches: [ main ]        # deploy only on main; adjust if needed

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: '3.11'        # test with most recent stable

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
      - name: Run (placeholder) tests
        run: |
          echo "## Add pytest or flake8 here ##"
          # pytest

  deploy:
    needs: test
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Add SSH key to agent
        uses: shimataro/ssh-key-action@v2
        with:
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          known_hosts: ${{ secrets.KNOWN_HOSTS }}

      # rsync keeps venv & other large files on the server, only diffs code
      - name: Sync code to server
        run: |
          rsync -az --delete \
            -e "ssh -o StrictHostKeyChecking=yes" \
            ./ ${{ secrets.SSH_USER }}@${{ secrets.SERVER_IP }}:~/TIRP/

      # install any new python deps + restart systemd unit
      - name: Install requirements & restart Flask service
        run: |
          ssh ${{ secrets.SSH_USER }}@${{ secrets.SERVER_IP }} <<'EOF'
            set -e
            cd ~/TIRP
            # ensure venv exists
            if [ ! -d venv ]; then
              python3 -m venv venv
            fi
            source venv/bin/activate
            pip install --upgrade pip
            pip install -r requirements.txt
            sudo systemctl restart flaskapp
          EOF